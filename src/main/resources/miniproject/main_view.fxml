<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="miniproject.controller.MainController">
   <top>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Student Record Management System" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="540.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Student Details">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="Name" />
            <TextField fx:id="tfName" promptText="Enter Name" />
            <Label text="Course" />
            <TextField fx:id="tfCourse" promptText="Enter Course" />
            <Label text="Total Marks" />
            <TextField fx:id="tfMarks" promptText="Enter Marks" />
            <Label text="CGPA" />
            <TextField fx:id="tfCGPA" promptText="Enter CGPA" />
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAddStudent" prefWidth="80.0" style="-fx-background-color: #27ae60;" text="Add" textFill="WHITE" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearForm" prefWidth="80.0" style="-fx-background-color: #95a5a6;" text="Clear" textFill="WHITE" />
               </children>
            </HBox>
            <Label text="-------------------------------------------" />
            <Label text="Operations">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="tfSearchRollNo" promptText="Enter Roll No for Search/Delete" />
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearchStudent" prefWidth="80.0" style="-fx-background-color: #2980b9;" text="Search" textFill="WHITE" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDeleteStudent" prefWidth="80.0" style="-fx-background-color: #c0392b;" text="Delete" textFill="WHITE" />
               </children>
            </HBox>
            <Button fx:id="btnShowAll" mnemonicParsing="false" onAction="#handleShowAll" prefWidth="170.0" text="Show All Records" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="tvStudents" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colRollNo" prefWidth="100.0" text="Roll No" />
          <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="colCourse" prefWidth="100.0" text="Course" />
            <TableColumn fx:id="colMarks" prefWidth="100.0" text="Marks" />
            <TableColumn fx:id="colCGPA" prefWidth="80.0" text="CGPA" />
        </columns>
      </TableView>
   </center>
</BorderPane>
